pipeline {
    agent any

    stages {
        stage('BE Unit Tests') {
            agent {
              docker {
                image 'snakee/golang-junit:1.21'
                reuseNode true
              }
            }
            steps {
              dir('bugtracker-backend') {
                sh 'sudo go test -v ./...'
              }
            }
        }
    }
}
